<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="NoColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="100dp"
            android:gravity="center"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="70dp"/>
    <TableLayout
            android:layout_width="395dp"
            android:layout_height="136dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="1.0">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <TextView
                    android:text="XML METHOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="horizontal" android:gravity="center">
            <Button
                    android:text="Merah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/merahBtn1" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    tools:layout_editor_absoluteY="225dp"
                    android:onClick="merahBtn"/>
            <Button
                    android:text="Hijau"
                    android:onClick="hijauBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hijauBtn1"
                    tools:layout_editor_absoluteY="329dp"/>
            <Button
                    android:text="Biru"
                    android:onClick="biruBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/biruBtn1"
                    tools:layout_editor_absoluteY="264dp" tools:layout_editor_absoluteX="144dp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <TextView
                    android:text="JAVA METHOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="Merah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/merahBtn2" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    tools:layout_editor_absoluteY="225dp"/>
            <Button
                    android:text="Hijau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hijauBtn2"
                    tools:layout_editor_absoluteY="329dp"/>
            <Button
                    android:text="Biru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/biruBtn2"
                    tools:layout_editor_absoluteY="264dp" tools:layout_editor_absoluteX="144dp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>